{% comment %}
  <style type="text/css">
    .template-404 .title + * {
      margin-top: 1rem;
    }

    @media screen and (min-width: 750px) {
      .template-404 .title + * {
        margin-top: 2rem;
      }
    }
  </style>

  <div class="template-404 page-width page-margin center">
    <p>
      {{ 'templates.404.subtext' | t }}
    </p>
    <h1 class="title">
      {{ 'templates.404.title' | t }}
    </h1>
    <a href="{{ routes.all_products_collection_url }}" class="button">
      {{ 'general.continue_shopping' | t }}
    </a>
  </div>
{% endcomment %}
<style>
  .template-404 {
    text-align: center;
    padding: 60px 20px;
  }

  .template-404__image {
    margin: 0 auto 24px;
  }

  .template-404__image img,
  .template-404__image svg {
    width: 100%;
    height: auto;
    display: block;
  }

  .template-404 h1 {
    margin: 16px 0 8px;
  }

  .template-404 p {
    color: #6b7280;
    margin-bottom: 24px;
  }

  .template-404 .button {
    margin-top: 16px;
    text-decoration: none;
    border-radius: 4px;
    padding: 12px 24px;
    background-color: #111827;
    color: #ffffff;
  }
</style>

<div class="template-404 page-width page-margin">
  <!-- IMAGE / SVG -->
  <div
    class="template-404__image"
    style="max-width: {{ section.settings.image_width }}px;"
  >
    {% if section.settings.image != blank %}
      <img
        src="{{ section.settings.image | image_url: width: 800 }}"
        alt="404 image"
        loading="lazy"
        width="100%"
        height="100%"
      >
    {% else %}
      <!-- SVG FALLBACK -->
      <svg
        width="100%"
        height="100%"
        viewBox="0 0 1024 1024"
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
        fill="#d1d5db"
      >
        <path d="M373.33 576c-23.47 25.6-57.6 42.67-96 42.67h-64C96 618.67 0 522.67 0 405.33S96 192 213.33 192h64c87.47 0 162.13 53.33 196.27 128H373.33c-23.47-25.6-57.6-42.67-96-42.67h-64c-70.4 0-128 57.6-128 128s57.6 128 128 128h64c38.4 0 72.53-17.07 96-42.67h100.27z"/>
        <path d="M810.67 192h-64c-87.47 0-162.13 53.33-196.27 128h100.27c23.47-25.6 57.6-42.67 96-42.67h64c70.4 0 128 57.6 128 128s-57.6 128-128 128h-64c-38.4 0-72.53-17.07-96-42.67h-100.27c32 74.67 108.8 128 196.27 128h64c117.33 0 213.33-96 213.33-213.33S928 192 810.67 192z"/>
      </svg>
    {% endif %}
  </div>

  <!-- TITLE -->
  {% if section.settings.title != blank %}
    <h1>{{ section.settings.title }}</h1>
  {% endif %}

  <!-- SUBTEXT -->
  {% if section.settings.subtext != blank %}
    <p>{{ section.settings.subtext }}</p>
  {% endif %}

  <!-- BUTTON -->
  <a
    href="{{ section.settings.button_link }}"
    class="button"
  >
    {{ section.settings.button_text }}
  </a>
</div>

{% schema %}
{
  "name": "404 Page",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "404 Image"
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Image width",
      "min": 120,
      "max": 600,
      "step": 20,
      "default": 320,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "404 â€“ Page not found"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "The page you are looking for does not exist."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Continue shopping"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "404 page"
    }
  ]
}
{% endschema %}
