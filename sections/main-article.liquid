<article class="article section-main-article" itemscope itemtype="http://schma.org/BlogPosting">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'featured_image' %}
        {% if article.image %}
          <div
            class="article__image article__image--{{ block.settings.image_height }}"
            {{ block.shopify_attributes }}
            itemscope=""
          >
            <img
              src="{{ article.image | image_url: width: 1600 }}"
              alt="{{ article.image.alt | escape }}"
              width="{{ article.image.width }}"
              height="{{ article.image.height }}"
              loading="eager"
            >
          </div>
        {% endif %}

      {% when 'title' %}
        <header class="article__header" {{ block.shopify_attributes }}>
          <h1 class="article__title" itemprop="headline">{{ article.title }}</h1>

          <div itemscope itemtype="http://schema.org/Person">
            {% if block.settings.blog_show_author and article.author != blank %}
              <p class="article__author" itemprop="autor">By {{ article.author }}</p>
            {% endif %}
          </div>

          {% if block.settings.blog_show_date %}
            <time
              itemprop="datePublished dateCreated"
              class="article__date"
              datetime="{{ article.published_at | date: '%Y-%m-%d' }}"
            >
              Published at {{ article.published_at | date: '%B %d, %Y' }}
            </time>
          {% endif %}
        </header>

      {% when 'content' %}
        <div class="article__content rte" {{ block.shopify_attributes }}>
          {{ article.content }}
        </div>

      {% when 'share' %}
        <div class="article__share" {{ block.shopify_attributes }}>
          <span class="article__share-label">
            {{ block.settings.share_label }}
          </span>

          <ul class="article__share-list">
            <li>
              <a href="https://www.facebook.com/sharer/sharer.php?u={{ canonical_url }}" target="_blank" rel="noopener">
                Facebook
              </a>
            </li>
            <li>
              <a href="https://twitter.com/intent/tweet?url={{ canonical_url }}" target="_blank" rel="noopener"> X </a>
            </li>
            <li>
              <a
                href="https://www.linkedin.com/sharing/share-offsite/?url={{ canonical_url }}"
                target="_blank"
                rel="noopener"
              >
                LinkedIn
              </a>
            </li>
          </ul>
        </div>

      {% when '@app' %}
        {% render block %}
    {% endcase %}
  {% endfor %}
  <div id="comments" class="comments_section">
    {% if blog.comments_enabled? %}
      <h2 class="comments-title"><p>See What Others Say</p></h2>
      {% if article.comments_count > 0 %}
        {% paginate article.comments by 1 %}
          {% for comment in article.comments %}
            <article class="comment-item">
              <div class="comment-avatar">
                {{ comment.author | slice: 0, 1 | upcase }}
              </div>

              <div class="comment-body">
                <p class="comment-meta">
                  <strong>{{ comment.author }}</strong>
                  <span class="comment-date">
                    {{ comment.created_at | date: '%B %d, %Y' }}
                  </span>
                </p>

                <div class="comment-content">
                  {{ comment.content }}
                </div>
              </div>
            </article>
          {% endfor %}

          {% comment %}
            {% if paginate.pages > 1 %}
              {% render 'pagination', paginate: paginate %}.
            {% endif %}
          {% endcomment %}
          <div class="paginate-pages">
            {{ paginate | default_pagination }}
          </div>
        {% endpaginate %}
      {% else %}
        No comments yet
      {% endif %}

      <div id="comments_form" class="comments-form">
        {% form 'new_comment', article %}
          {% if form.posted_successfully? %}
            <p class="form-success">Comment submitted successfully.</p>
          {% elsif form.errors %}
            <div class="form-errors">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          <div class="form-field">
            <label for="CommentAuthor">Name</label>
            <input
              type="text"
              name="comment[author]"
              id="CommentAuthor"
              value="{{ form.author }}"
              required
            >
          </div>

          <div class="form-field">
            <label for="CommentEmail">Email</label>
            <input
              type="email"
              name="comment[email]"
              id="CommentEmail"
              value="{{ form.email }}"
              required
            >
          </div>

          <div class="form-field">
            <label for="CommentBody">Comment</label>
            <textarea
              name="comment[body]"
              id="CommentBody"
              rows="5"
              required
            >{{ form.body }}</textarea>
          </div>

          <button type="submit" class="comment-submit">Post Comment</button>
        {% endform %}
      </div>
    {% endif %}
  </div>
</article>

